body {
  background: #444;
}

h1 {
  font-size: 1.33em;
  font-weight: bold;
  margin-bottom: 1em;
  margin-top: 0.25em;
  text-align: center;
}

input[type="button"] {
  background: #F7F7F7;
  border: 0.125em outset #CCC;
  margin-top: 1em;
  height: 2em;
}
input[type="button"]:hover {
  background: #FFF;
  border-color: #DDD;
}
input[type="button"]:active {
  background: #CCC;
  border-color: #AAA;
}

.hint {
  font-size: smaller;
  font-style: italic;
  margin-top: 1em;
  text-align: center;
}

.pkmn-form {
  display: inline-block;
  background: #FFF;
  padding: 1em;
  width: 14em;
  top: 0;
  vertical-align: top;
}

.form-field {
  margin-bottom: 0.5em;
}

.form-field-centered {
  text-align: center;
}

.form-field label {
  display: inline-block;
  font-weight: bold;
  width: 6em;
}

.reset-btn {
  width: 4em;
}
.render-btn {
  width: 8em;
}

#sheet {
  display: inline-block;
  border: thin solid black;
}
